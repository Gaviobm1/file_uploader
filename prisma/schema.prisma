generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DB_CONNECTION_STRING")
}

model User {
  id  Int @id @default(autoincrement())
  firstName String
  lastName  String
  email String  @unique
  password  String
  folders Folder[]
  files File[]
}

model Folder {
  id  Int @id @default(autoincrement())
  owner User  @relation(fields: [ownerId], references: [id])
  ownerId Int
  path  String  @unique
  files File[]
}

model File {
  id  Int @id @default(autoincrement())
  owner User  @relation(fields: [ownerId], references: [id])
  ownerId Int
  folder  Folder  @relation(fields: [folderPath], references: [path])
  folderPath  String
}


model Session {
  id        String   @id
  sid       String   @unique
  data      String   
  expiresAt   DateTime
}

